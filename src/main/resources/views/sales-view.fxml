<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="531.0" prefWidth="813.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bodegaproject.controllers.SalesController">

   <!-- Center Content -->
   <center>
      <VBox alignment="CENTER" prefWidth="400.0" spacing="10.0" style="-fx-padding: 10;" BorderPane.alignment="TOP_LEFT">

         <!-- Table Section -->
         <TableView fx:id="salesTable" focusTraversable="false" nodeOrientation="LEFT_TO_RIGHT" stylesheets="@../styles/styles.css" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="productColumn" prefWidth="119.0" text="Productos" />
               <TableColumn fx:id="qtyColumn" prefWidth="77.0" text="Cantidad" />
               <TableColumn fx:id="codigoColumn" prefWidth="93.0" text="Codigo" />
               <TableColumn fx:id="precioColumn" prefWidth="98.0" text="Precio" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>

         <!-- Controls Section -->
         <HBox alignment="CENTER" prefHeight="25.0" prefWidth="320.0" spacing="10">
            <TextField fx:id="searchField" focusTraversable="false" promptText="Buscar producto" styleClass="text-field" stylesheets="@../styles/styles.css" />
            <Button fx:id="addButton" focusTraversable="false" onAction="#addProductToList" text="Agregar Producto" />
            <Button fx:id="removeButton" focusTraversable="false" text="Eliminar Producto" />
         </HBox>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>

      </VBox>
   </center>

   <!-- Right Panel -->
   <right>
      <VBox prefHeight="511.0" prefWidth="314.0" spacing="10" style="-fx-padding: 10; -fx-border-color: gray; -fx-background-radius: 20; -fx-border-radius: 10;">
         <Label alignment="CENTER" style="-fx-font-weight: bold;" text="Productos" />
         <ListView fx:id="listItems" focusTraversable="false" VBox.vgrow="ALWAYS" />

         <HBox alignment="CENTER" spacing="10">
            <Label alignment="CENTER" contentDisplay="CENTER" text="Total:" />
            <Label fx:id="totalLabel" style="-fx-font-weight: bold;" text="0 BS" />
         </HBox>

         <Button fx:id="checkoutButton" focusTraversable="false" onAction="#realizarVenta" maxWidth="Infinity" text="Realizar Compra" />
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
