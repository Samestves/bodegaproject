<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<SplitPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bodegaproject.controllers.CreditsController">
   <!-- Zona Izquierda: Controles para gestión de clientes -->
   <VBox spacing="10" style="-fx-padding: 10;">
      <Label text="Gestión de Clientes" style="-fx-font-size: 16; -fx-font-weight: bold;" />
      <Button text="Agregar Cliente" fx:id="btnAgregarCliente" />
      <Button text="Eliminar Cliente" fx:id="btnEliminarCliente" />
      <TextField fx:id="buscarCliente" promptText="Buscar Cliente..." />
   </VBox>

   <!-- Zona Derecha: Lista de Clientes con panel desplegable -->
   <ScrollPane fitToWidth="true">
      <VBox spacing="10" style="-fx-padding: 10;">
         <Label text="Lista de Clientes" style="-fx-font-size: 16; -fx-font-weight: bold;" />
         <!-- Lista de clientes -->
         <VBox fx:id="clientesContainer" spacing="5">
            <!-- Ejemplo de cliente expandible -->
            <VBox style="-fx-background-color: #f9f9f9; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5;">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Label text="Juan Pérez" style="-fx-font-size: 14;" />
                  <Button text="▼" fx:id="btnDesplegarJuan" onAction="#toggleDetalleJuan" />
               </HBox>
               <!-- Panel desplegable (inicialmente oculto) -->
               <VBox fx:id="detalleJuan" spacing="5" visible="false" managed="false" style="-fx-padding: 10; -fx-background-color: #eef;">
                  <Label text="Deuda: $500" />
                  <Label text="Productos: Pan, Leche" />
                  <Label text="Fecha Última Compra: 2025-01-20" />
               </VBox>
            </VBox>
            <!-- Más clientes se generan dinámicamente -->
         </VBox>
      </VBox>
   </ScrollPane>
</SplitPane>

