<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="viewContainer" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bodegaproject.controllers.MainController">
    <!-- Vista principal con contenido dinámico -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: white;">
            <!-- Área para las vistas dinámicas -->
        </StackPane>
    </center>
    <bottom>
        <!-- Botones fijos en la parte inferior -->
        <HBox alignment="CENTER" prefHeight="50" spacing="10" style="-fx-background-color: gray; -fx-padding: 10;">
            <Button fx:id="inventoryButton" focusTraversable="false" onAction="#switchToInventory" prefHeight="35.0" prefWidth="35.0" stylesheets="@../styles/styles.css" text="📦" />
            <Button fx:id="salesButton" focusTraversable="false" onAction="#switchToSales" prefHeight="35.0" prefWidth="35.0" stylesheets="@../styles/styles.css" text="🛒" />
            <Button fx:id="creditsButton" focusTraversable="false" onAction="#switchToCredits" prefHeight="35.0" prefWidth="35.0" stylesheets="@../styles/styles.css" text="👥" />
        </HBox>
    </bottom>
</BorderPane>
